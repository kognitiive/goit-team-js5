<div class="modal-thumb" data-action="{{poster_path}}">
<div class='thumb'>

  <img class='modal__image' src=https://image.tmdb.org/t/p/w500{{poster_path}} alt="{{title}}" data-id="{{poster_path}}" />
</div>

   <div class='wrap-modal'>
    <h2 class='modal__title'>{{title}}</h2>

     <ul class='modal__list modal__list--keys'>
      <li>Vote / Votes</li>
      <li>Popularity</li>
      <li>Original Title</li>
      <li>Genre</li>
    </ul>


    <ul class='modal__list modal__list--values'>
      <li class='modal-list__item'>
        <span class='modal__rating--orange'>{{vote_average}}</span>
        <span class='modal__rating--slash'> /</span>
        <span class='modal__rating'>{{vote_count}}</span>
      </li>
      <li>{{popularity}}</li>
      <li>{{#if curFilm.original_title}}
          <p>{{curFilm.original_title}}</p>
        {{/if}}
        {{#if curFilm.name}}
          <p>{{curFilm.name}}</p>
        {{/if}}
      </li>
      <li>{{curFilm.genre_ids}}</li>
    </ul>

  <div class='modal-text'>
    <h3 class='modal-text__title'>About</h3>
    <p class='modal-text__item'>{{curFilm.overview}}</p>
    </div>
  </div>
</div>



